<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/tvNombreBeneficio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beneficio x"
                android:fontFamily="@font/baloo"
                android:textColor="@color/cafe_oscuro"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNombreSucursal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ovalle cafe"
                android:textSize="15sp"
                android:fontFamily="@font/baloo"
                android:textStyle="bold"
                android:textColor="@color/cafe_oscuro"/>

            <TextView
                android:id="@+id/tvFechaHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/12/2024 - 09:12:34 am"
                android:textSize="15sp"
                android:fontFamily="@font/baloo"
                android:textStyle="bold"
                android:textColor="@color/cafe_oscuro"/>

            <TextView
                android:id="@+id/tvProductoRelacionado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cafe negro"
                android:textSize="15sp"
                android:fontFamily="@font/baloo"
                android:textStyle="bold"
                android:textColor="@color/cafe_oscuro"/>


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>